{
  "name": "memento",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "dev:beta": "vite dev --port 3000 --mode beta",
    "dev:production": "vite dev --port 3000 --mode production",
    "build": "vite build && cp dist/server/index.js dist/client/_worker.js",
    "build:beta": "vite build --mode beta && cp dist/server/index.js dist/client/_worker.js",
    "build:production": "vite build --mode production && cp dist/server/index.js dist/client/_worker.js",
    "serve": "vite preview",
    "cf-typegen": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "TEST_TYPE=api playwright test",
    "test:e2e:api": "TEST_TYPE=api playwright test tests/e2e/api",
    "test:e2e:ui": "TEST_TYPE=ui playwright test tests/e2e/ui",
    "test:e2e:headed": "TEST_TYPE=api playwright test --headed",
    "test:e2e:debug": "TEST_TYPE=api playwright test --debug",
    "test:all": "pnpm test && pnpm test:e2e",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.64.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "lucide-react": "^0.544.0",
    "nitro": "latest",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.15.2",
    "@cloudflare/workers-types": "^4.20251117.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.49.0",
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.0.5",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jsdom": "^27.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.50.0"
  }
}
